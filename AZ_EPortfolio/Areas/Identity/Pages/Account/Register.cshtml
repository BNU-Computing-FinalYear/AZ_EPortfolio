@page
@model RegisterModel
@using AZ_EPortfolio.Models;
@using AZ_EPortfolio.Utility;


@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserType"></label>
                <select asp-items="Html.GetEnumSelectList<UserTypes>()" asp-for="Input.UserType" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.AdminUser))
            {
        <div class="form-group">
            <input type="radio" name="rdUserRole" value="@SD.UndergraduateUser" checked /> @SD.UndergraduateUser
            <input type="radio" name="rdUserRole" value="@SD.PostgraduateUser" checked /> @SD.PostgraduateUser
            <input type="radio" name="rdUserRole" value="@SD.AdminUser" checked /> @SD.AdminUser
            <input type="radio" name="rdUserRole" value="@SD.EmployerUser" checked /> @SD.EmployerUser
            <input type="radio" name="rdUserRole" value="@SD.DeveloperUser" checked /> @SD.DeveloperUser
            <input type="radio" name="rdUserRole" value="@SD.ApprenticeUser" checked /> @SD.ApprenticeUser
        </div>
            }
                    <button type="submit" class="btn btn-primary">Register</button>
            </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
