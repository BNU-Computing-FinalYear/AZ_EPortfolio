@model IEnumerable<AZ_EPortfolio.Models.Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Listing of all the Portfolios</h1>
</div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PortfolioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PortfolioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PortfolioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
