@using AZ_EPortfolio.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AZ_EPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    <script src="https://cdn.tiny.cloud/1/pc9eqmj5txk5hp8dqxbw8nh2sk9von3x8p7y6qqrd6hbhmyj/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://kit.fontawesome.com/1bf403cd34.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="home" asp-action="Index">
                    <img src="/Images/az_logo.png" width="70" height="75">
                    <label class="text-secondary" style="cursor:pointer">AZ E-Portfolio</label>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Templates" asp-action="Index">Undergraduates</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Templates" asp-action="Index">Graduates</a>
                        </li>
                        @if (User.IsInRole(SD.AdminUser))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AzUsers" asp-action="Index">Users</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.DeveloperUser))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AzUsers" asp-action="Index">Users</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.EmployerUser))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AzUsers" asp-action="Index">Users</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted">
        <div class="jumbotron">
            <section class="row">
                <section class="col-lg-3">
                    <h4>Support</h4>
                    <p><a class="link-dark" asp-area="" asp-controller="Home" asp-action="SupportedBrowsersDevices">Supported Browsers and Devices</a></p>
                    <p><a class="link-dark" asp-area="" asp-controller="Home" asp-action="AcceptedFileFormats">Accepted File Formats</a></p>
                    <p><a class="link-dark" asp-area="" asp-controller="Home" asp-action="FormattingImages">Formatting Images</a></p>
                    <p><a class="link-dark" asp-area="" asp-controller="Home" asp-action="VideoRenditions">Video Renditions</a></p>
                    <p><a class="link-dark" asp-area="" asp-controller="Home" asp-action="TermsConditions">Terms and Conditions</a></p>
                </section>
                <section class="col-lg-3">
                    <h4>Address</h4>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2466.598343320795!2d-0.8116601842187419!3d51.81349937968658!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4876f7a97167218f%3A0xc27980591e589d4c!2s59+Walton+St%2C+Aylesbury!5e0!3m2!1sen!2suk!4v1543933744042" width="375" height="175" frameborder="0" style="border: 0" allowfullscreen>
                    </iframe>
                </section>
                <section class="col-lg-3">
                    <h4>Contact</h4>
                    <div>
                        <strong>Email: </strong><a href="mailto:info@azeportfolio-developer.co.uk">info@azeportfolio-developer.co.uk</a><br /><br />
                        <strong>Telephone:</strong>
                        01296 306 651 (Office)<br />
                    </div>
                </section>
                <section class="col-lg-3">
                    <h4>Development</h4>
                    <div>
                        <strong>Developed by: </strong><p>Ana Lucia Petinga Zorro</p>
                        <p>BSc in Computing and Web Development</p>
                        <p>Buckinghamshire New University</p><br />
                        <strong>AZ E-Portfolio Project &copy; 2021</strong>
                    </div>
                </section>
            </section>
</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Ana Zorro',
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
